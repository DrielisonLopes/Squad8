@model IEnumerable<Mulher_Presente.Models.Vitima>

@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h1>Registre sua denúncia</h1>
    <p class="text-white">
        Através do seu cadastro você vai poder sert amparada por um profissional
        selecionado que vai entrar em contato para te dar o suprte necessário
    </p>

<p class="font-weight-bold">
    <a asp-action="Create" class="badge badge-info">Criar chamada</a>
</p>
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.apelido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Parceiros)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.apelido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.telefone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Parceiros.Especilidade)
            </td>
            <td>
                <a class="text-info" asp-action="Edit" asp-route-id="@item.id_vitima">Edit</a> |
                <a class="text-info" asp-action="Details" asp-route-id="@item.id_vitima">Details</a> |
                <a class="text-info" asp-action="Delete" asp-route-id="@item.id_vitima">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
